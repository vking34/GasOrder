<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/ibtn_order"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="79dp"
        app:srcCompat="@android:color/holo_red_light" />

    <ImageButton
        android:id="@+id/ibtn_products"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibtn_order"
        app:srcCompat="@android:color/holo_green_dark" />

    <ImageButton
        android:id="@+id/ibtn_tips"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ibtn_products"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/tv_products"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ibtn_order"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="Products"
        android:textColor="@color/black"
        android:textSize="15pt" />

    <TextView
        android:id="@+id/tv_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_products"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:text="Order Gas"
        android:textColor="@color/black"
        android:textSize="15pt" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ibtn_tips"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="55dp"
        android:text="Tips for using and safety"
        android:textColor="@color/black"
        android:textSize="12pt" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/item_toolbar"
        android:id="@+id/toolbar"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/background"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>

        <LinearLayout
            android:id="@+id/type_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="17"
            android:orientation="horizontal"
            android:background="@color/white">


            <LinearLayout
            android:id="@+id/product_gas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon_gas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/gas"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/text_gas"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="Gas"
                android:textStyle="bold"
                android:textColor="@color/product_list"
                android:gravity="center"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/product_devices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/device"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/text_devices"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Devices"
                    android:textStyle="bold"
                    android:textColor="@color/product_list"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/maintenance_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_maintanance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/maintanance"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/text_maintanance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="Maintanance"
                    android:textStyle="bold"
                    android:textColor="@color/product_list"
                    android:gravity="center"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/all_product"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icon_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/all"
                    android:scaleX="0.8"
                    android:scaleY="0.8"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/text_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="All Products"
                    android:textStyle="bold"
                    android:textColor="@color/product_list"
                    android:gravity="center"/>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>